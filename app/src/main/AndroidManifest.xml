<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.doctorapp">

    //Internet and storage permission
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DoctorApp">
        <activity android:name=".reminderPatient"></activity>
        <receiver android:name=".AlarmReceiver"/>
        <activity android:name=".CreatePatientProfileActivity" />
        <activity android:name=".CreateDoctorProfileActivity" />
        <activity android:name=".doctorEditProfile" />
        <activity android:name=".patientEditProfile" />
        <activity android:name=".MainActivity" />
        <activity android:name=".DoctorViewProfile" />
        <activity android:name=".app1page">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".signDoctor" />
        <activity android:name=".PatientViewProfile" />
        <activity android:name=".signPatient" />
    </application>

</manifest>